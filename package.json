{
  "name": "shebangify",
  "version": "1.0.0",
  "description": "A small utility to add a shebang, to be used when creating command-line apps with TypeScript and NodeJS",
  "main": "dist/index.js",
  "bin": "dist/cli/shebangify.js",
  "types": "types/indes.d.ts",
  "scripts": {
    "prebuild": "npm run lint && rimraf dist/*",
    "build": "tsc",
    "postbuild": "node build-tools/add-shebang-to-shebangify.js",
    "lint": "tslint -c tslint.json {src,tests}/**/*.ts",
    "test": "mocha --opts mocha.opts",
    "coverage": "nyc mocha --opts mocha.opts",
    "postcoverage": "rimraf .nyc_output",
    "watch": "mocha --watch --reporter min --opts mocha.opts"
  },
  "keywords": [],
  "author": "Uri Chandler",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "@types/sinon": "^5.0.5",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.0",
    "ts-lint": "^4.5.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text"
    ]
  },
  "dependencies": {}
}
